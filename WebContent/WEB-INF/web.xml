<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
	version="2.5">
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.servlets.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/loginServlet</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>com.servlets.RegisterServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/registerServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>updateinfo</servlet-name>
		<servlet-class>com.servlets.UpdateServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>updateinfo</servlet-name>
		<url-pattern>/updateServlet</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>reportbug</servlet-name>
		<servlet-class>com.servlets.BugServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>reportbug</servlet-name>
		<url-pattern>/report-issue</url-pattern>
	</servlet-mapping>
	
   	<servlet>
        <servlet-name>issues</servlet-name>
        <servlet-class>com.servlets.IssuesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>issues</servlet-name>
        <url-pattern>/welcome-admin</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>recipe</servlet-name>
    	<servlet-class>com.servlets.RecipeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>recipe</servlet-name>
    	<url-pattern>/myrecipes</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>recipedetails</servlet-name>
    	<servlet-class>com.servlets.RecipeDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>recipedetails</servlet-name>
    	<url-pattern>/recipe</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>changepassword</servlet-name>
    	<servlet-class>com.servlets.ChangePassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>changepassword</servlet-name>
    	<url-pattern>/changepassword</url-pattern>
    </servlet-mapping>
	
	<servlet>
    	<servlet-name>addfood</servlet-name>
    	<servlet-class>com.servlets.FoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>addfood</servlet-name>
    	<url-pattern>/addfood</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>inventory</servlet-name>
    	<servlet-class>com.servlets.FoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>inventory</servlet-name>
    	<url-pattern>/myinventory</url-pattern>
    </servlet-mapping>
	
	
</web-app>